- name: krasnodar-$ARGO_APP_NAME
  gitops: false
  production: false
  servicePlan: $SERVICE_PLAN
  platform:
    dbName: $DB_NAME
    imageRepository: virtopaasregistrymain.azurecr.io/krasnodar/platform
    imageTag: 3.209.1-5331196711
    sqlReplica: false
    config:
      restart: 2
      AzureAd__Enabled: true
      AzureAd__ApplicationId: d7edfa5a-1e20-424f-8fa7-b7084294ff8f
      AzureAd__TenantId: bc03e660-5e3a-45c4-bf5c-b75489f78923
      AzureAd__UsePreferredUsername: true
      ASPNETCORE_FORWARDEDHEADERS_ENABLED: true
      Search__Provider: ElasticSearch
      Search__ElasticSearch__Server: http://search-es-http.elastic-system.svc.cluster.local:9200
      Search__ElasticSearch__User: $ELASTIC_USER
      AzureAd__Priority: 0
      PasswordLogin__Priority: 1
      SaaS__Replica__WebHookUrl: https://$WEBHOOK_URL/db-config
